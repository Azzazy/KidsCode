<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mohamedazzazy.test.kidscode.KidInfoActivity">

    <TextView android:text="The Name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName_KidInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp" />

    <TextView
        android:text="Coins :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCoins_KidInfo"
        android:textSize="15sp"
        android:layout_below="@+id/tvName_KidInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp" />
    <TextView
        android:text="Mobile :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMobile_KidInfo"
        android:textSize="15sp"
        android:layout_below="@+id/tvCoins_KidInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp" />
    <TextView
        android:text="ID :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvId_KidInfo"
        android:textSize="15sp"
        android:layout_below="@+id/tvMobile_KidInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvCoins_KidInfo"
        android:layout_below="@+id/tvId_KidInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:visibility="invisible" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textSize="15sp"
        android:id="@+id/rbActive_KidInfo"
        android:visibility="invisible"
        android:enabled="true"
        android:layout_above="@+id/lvCoins_KidInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
